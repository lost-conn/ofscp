{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/ofscp/schemas/v0.1/ws/channel-typing.json",
  "title": "OFSCP WS channel.typing event (v0.1)",
  "allOf": [
    { "$ref": "./envelope.json" },
    {
      "type": "object",
      "required": ["type", "data"],
      "properties": {
        "type": { "const": "channel.typing" },
        "data": {
          "type": "object",
          "additionalProperties": true,
          "required": ["channelId", "user", "state"],
          "properties": {
            "channelId": { "type": "string", "minLength": 1 },
            "user": { "$ref": "../defs/identity.json#/$defs/UserRef" },
            "state": { "type": "string", "enum": ["start", "stop"] }
          }
        }
      }
    }
  ]
}
