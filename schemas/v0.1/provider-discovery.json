{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/ofscp/schemas/v0.1/provider-discovery.json",
  "title": "OFSCP Provider Discovery Document (v0.1)",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "provider": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "domain": {
          "type": "string",
          "minLength": 1
        },
        "protocolVersion": {
          "type": "string",
          "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z.-]+)?(?:\\+[0-9A-Za-z.-]+)?$"
        },
        "software": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "name": {
              "type": "string"
            },
            "version": {
              "type": "string"
            }
          },
          "required": [
            "name",
            "version"
          ]
        },
        "contact": {
          "type": "string"
        },
        "authentication": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "login_endpoint": {
              "$ref": "./defs/common.json#/$defs/HttpsUri"
            },
            "registration_endpoint": {
              "$ref": "./defs/common.json#/$defs/HttpsUri"
            }
          },
          "required": [
            "login_endpoint"
          ]
        },
        "publicKeys": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "kid": {
                "type": "string",
                "minLength": 1
              },
              "alg": {
                "type": "string",
                "enum": [
                  "Ed25519"
                ]
              },
              "publicKey": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "kid",
              "alg",
              "publicKey"
            ]
          }
        }
      },
      "required": [
        "domain",
        "protocolVersion",
        "software",
        "contact",
        "authentication"
      ]
    },
    "capabilities": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "messageTypes": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "memo",
              "article",
              "message",
              "reaction"
            ]
          }
        },
        "discoverability": {
          "type": "array",
          "items": {
            "$ref": "./defs/common.json#/$defs/Discoverability"
          }
        },
        "metadataSchemas": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "uri": {
                "$ref": "./defs/common.json#/$defs/HttpsUri"
              }
            },
            "required": [
              "id",
              "uri"
            ]
          }
        }
      }
    },
    "endpoints": {
      "type": "object",
      "additionalProperties": true,
      "description": "Deprecated. Core API endpoints are standardized relative to provider domain (see spec). Providers SHOULD NOT include this section; clients MUST ignore it if present."
    }
  },
  "required": [
    "provider",
    "capabilities"
  ]
}