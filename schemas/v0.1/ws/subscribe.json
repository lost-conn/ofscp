{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/ofscp/schemas/v0.1/ws/subscribe.json",
  "title": "OFSCP WS subscribe command (v0.1)",
  "allOf": [
    { "$ref": "./envelope.json" },
    {
      "type": "object",
      "required": ["type", "data"],
      "properties": {
        "type": { "const": "subscribe" },
        "data": {
          "type": "object",
          "additionalProperties": true,
          "required": ["channels"],
          "properties": {
            "channels": {
              "type": "array",
              "minItems": 1,
              "items": { "type": "string", "minLength": 1 }
            },
            "include": {
              "type": "array",
              "items": { "$ref": "./types.json#/$defs/WsEventType" },
              "description": "Optional whitelist of event types to receive. If omitted, provider-defined defaults apply."
            }
          }
        }
      }
    }
  ]
}
