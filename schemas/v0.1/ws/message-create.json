{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/ofscp/schemas/v0.1/ws/message-create.json",
  "title": "OFSCP WS message.create command (v0.1)",
  "allOf": [
    { "$ref": "./envelope.json" },
    {
      "type": "object",
      "required": ["type", "data"],
      "properties": {
        "type": { "const": "message.create" },
        "data": {
          "type": "object",
          "additionalProperties": true,
          "required": ["groupId", "channelId", "content"],
          "properties": {
            "groupId": { "type": "string", "minLength": 1 },
            "channelId": { "type": "string", "minLength": 1 },
            "clientMessageId": { "type": "string", "minLength": 1 },
            "content": {
              "type": "object",
              "additionalProperties": true,
              "required": ["type", "text"],
              "properties": {
                "type": { "$ref": "../defs/common.json#/$defs/MimeType" },
                "text": { "type": "string" }
              }
            }
          }
        }
      }
    }
  ]
}
